<Window x:Class="WPFView.AlterarEnderecoEstabelecimento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFView"
        mc:Ignorable="d"
        Title="AlterarEnderecoEstabelecimento" Height="400" Width="350">
    <Grid>
        <Label Content="Dados de Endereço:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Logradouro:" HorizontalAlignment="Left" Margin="33,55,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="logradouro" Height="25" Margin="114,55,37,0" TextWrapping="Wrap" VerticalAlignment="Top" IsEnabled="False"/>
        <Label Content="Número:" HorizontalAlignment="Left" Margin="46,96,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="numero" HorizontalAlignment="Left" Height="25" Margin="114,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" IsEnabled="False"/>
        <Label Content="Bairro:" HorizontalAlignment="Left" Margin="55,141,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="bairro" HorizontalAlignment="Left" Height="25" Margin="114,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" IsEnabled="False"/>
        <Label Content="Cidade:" HorizontalAlignment="Left" Margin="52,187,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.895,0"/>
        <TextBox x:Name="cidade" HorizontalAlignment="Left" Height="23" Margin="114,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" IsEnabled="False"/>
        <Label Content="UF: " HorizontalAlignment="Left" Margin="61,227,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.289,0.564"/>
        <ComboBox x:Name="uf" HorizontalAlignment="Left" Margin="114,225,0,0" VerticalAlignment="Top" Width="191" IsEnabled="False">
            <ComboBoxItem Content="PR"/>
            <ComboBoxItem Content="SC"/>
            <ComboBoxItem Content="RS"/>
        </ComboBox>
        <Label Content="Produto:" HorizontalAlignment="Left" Margin="44,271,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="produto" HorizontalAlignment="Left" Height="23" Margin="114,271,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" IsEnabled="False"/>
        <Button x:Name="btn_editarEnd" Content="Alterar Dados" HorizontalAlignment="Left" Margin="84,316,0,0" VerticalAlignment="Top" Width="173" Click="editar_Click"/>
        <Button x:Name="btn_salvarEnd" Content="Salvar" HorizontalAlignment="Left" Margin="84,316,0,0" VerticalAlignment="Top" Width="173" Click="salvar_Click"/>
    </Grid>
</Window>
